<Window x:Class="WpfApp1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Login" Height="280" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Etiqueta de Usuario -->
        <Label Content="Usuario:" Grid.Row="0" Grid.Column="0" 
           VerticalAlignment="Center" HorizontalAlignment="Right" 
           FontSize="16" Margin="10"/>

        <!-- Campo de usuario -->
        <TextBox x:Name="txtUsuario" Grid.Row="0" Grid.Column="1" 
             VerticalAlignment="Center" Margin="10" Padding="5" Height="35" FontSize="16"/>

        <!-- Etiqueta de Contraseña -->
        <Label Content="Password:" Grid.Row="1" Grid.Column="0" 
           VerticalAlignment="Center" HorizontalAlignment="Right" 
           FontSize="16" Margin="10"/>

        <!-- Campo de contraseña -->
        <PasswordBox x:Name="txtContraseña" Grid.Row="1" Grid.Column="1" 
                 VerticalAlignment="Center" Margin="10" Padding="5" Height="35" FontSize="16"/>

        <!-- Botón de Login -->
        <Button Content="Login" Height="45" Width="250" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
            HorizontalAlignment="Center" Margin="10" FontSize="16" />

        <!-- Botón de Recuperar -->
        <Button Content="Recuperar" Height="45" Width="250" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
            HorizontalAlignment="Center" Margin="10" FontSize="16"/>
    </Grid>

</Window>
